{% extends 'KunstmaanAdminBundle:Default:layout.html.twig' %}

{% block content %}
    <h1>{{ 'pages.pagenottranslated' | trans }}</h1>
    {% if copyfromotherlanguages %}
    <ul>
        {% for nodeTranslation in nodeTranslations %}
            <li>{{ 'pages.copyfrom' | trans }} <a href="{{ nodeAdminConfigurator.generateCopyFromOtherLanguageUrl(app.request, node, nodeTranslation.lang) }}" class="translate">{{ nodeTranslation.lang }}</a> : {{ nodeTranslation.title }}</li>
        {% endfor %}
        <li><a href="{{ nodeAdminConfigurator.generateCreateEmptyPageUrl(app.request, node) }}" class="translate">{{ 'pages.createemptypage' | trans }}</a></li>
    </ul>
    {% else %}
        {{ 'pages.copynotavailable' | trans }}
    {% endif %}

<script type="text/javascript">
    $(document).ready(function() {
        $('a.translate').on('click', function() {
            e.preventDefault();
            if ($(this).hasClass('disabled')) {
                return false;
            }
            $(this).addClass('disabled');
            window.location.href = $(this).attr('href');
        });
    });
</script>
{% endblock %}